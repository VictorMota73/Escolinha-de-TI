using System;
using System.Globalization;

namespace MyApplication
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Digite o valor do Valor Futuro: ");
            double VF = double.Parse(Console.ReadLine(), CultureInfo.InvariantCulture);
            Console.Write("Digite o valor da Taxa de Juros: ");
            double Juros = double.Parse(Console.ReadLine(), CultureInfo.InvariantCulture);
            double porcent = Juros / 100;
            Console.Write("Informe o periodo (ano): ");
            int Periodo = int.Parse(Console.ReadLine(), CultureInfo.InvariantCulture);
            float SomaBosta = (float)(1 + porcent);
            double VP = VF/ (Math.Pow(SomaBosta, Periodo));
            Console.WriteLine($"Periodo é {Periodo}");
            Console.WriteLine($"O Valor Presente é {VP:F2}");
            Console.WriteLine($"Os Juros são {porcent}");
            Console.WriteLine($"O Valor Futuro é {VF:F2}");

        }
    }
}
